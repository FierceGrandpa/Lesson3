<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">


    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Информация о веб-индустрии"
        android:textSize="20sp"
        android:textColor="?attr/colorOnSurface"
        android:paddingBottom="16dp" />

    <TextView
        android:id="@+id/descriptionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Веб-индустрия охватывает различные технологии и дисциплины, связанные с созданием и обслуживанием веб-сайтов и веб-приложений."
        android:textColor="?attr/colorOnSurface"
        android:paddingBottom="8dp" />

    <TextView
        android:id="@+id/skillsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ключевые навыки:"
        android:textSize="18sp"
        android:textColor="?attr/colorOnSurface"
        android:textStyle="bold"
        android:paddingTop="16dp"
        android:paddingBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:id="@+id/skill1TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HTML"
            android:textColor="?attr/colorOnSurface"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/skill2TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CSS"
            android:textColor="?attr/colorOnSurface"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/skill3TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="JavaScript"
            android:textColor="?attr/colorOnSurface"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/skill4TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ReactJS"
            android:textColor="?attr/colorOnSurface"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/skill5TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NestJS"
            android:textColor="?attr/colorOnSurface"
            android:paddingBottom="8dp" />

    </LinearLayout>

</LinearLayout>
